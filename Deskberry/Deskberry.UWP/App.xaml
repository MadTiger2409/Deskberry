<Application x:Class="Deskberry.UWP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:input="using:Syncfusion.UI.Xaml.Controls.Input"
             xmlns:local="using:Deskberry.UWP"
             xmlns:syncresource="using:Syncfusion.UI.Xaml.Controls.Input"
             RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/NotesPage.xaml" />
                <ResourceDictionary Source="/Styles/ActionButton.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="SystemAccentColor">#A80000</Color>
            <Color x:Key="SystemAccentColorLight1">#CF2323</Color>
            <Color x:Key="SystemAccentColorDark1">#910000</Color>
            <SolidColorBrush x:Key="SystemControlHighlightAccentBrush"
                             Color="#A80000" />
        </ResourceDictionary>
    </Application.Resources>
</Application>