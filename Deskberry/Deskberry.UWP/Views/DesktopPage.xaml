<Page
    x:Class="Deskberry.UWP.Views.DesktopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deskberry.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Extensions/Paths/Raspberry.xaml"/>
                <ResourceDictionary Source="ms-appx:///Extensions/Paths/Calculator.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/Wallpapers/RaspberryPi.jpg"
                    Stretch="UniformToFill"/>
    </Page.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Desktop -->
        <Frame Grid.Row="0"/>

        <!-- Taskbar -->
        <Grid Grid.Row="1"
              Background= "{ThemeResource SystemControlAcrylicElementBrush}"
              Opacity="0.8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- Start's menu -->
            <Viewbox Grid.Column="0"
                     MaxHeight="50"
                     MaxWidth="60">
                <Button Background="Transparent"
                        Margin="0">
                    <Button.Content>
                        <Path Data="{StaticResource RaspberryGeometry}"
                              Stroke="Black"
                              MinHeight="32"
                              MinWidth="32"/>
                    </Button.Content>
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel Orientation="Vertical">
                                <Button Content="App"/>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Viewbox>

            <!-- Task's bar applications -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"/>
            
            <!-- DateTime info -->
            <Viewbox Grid.Column="2"
                     MaxHeight="50"
                     MaxWidth="150">
                <Button Background="Transparent">
                    <StackPanel Orientation="Vertical"
                            Margin="3">
                        <TextBlock Text="15:00"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="12.12.2012"
                               HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Button.Flyout>
                        <Flyout>
                            <CalendarView/>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                
            </Viewbox>
            
        </Grid>
    </Grid>
</Page>
