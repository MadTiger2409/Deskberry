<Page
    x:Class="Deskberry.UWP.Views.DesktopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Deskberry.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Extensions/Paths/Raspberry.xaml"/>
                <ResourceDictionary Source="ms-appx:///Extensions/Paths/Calculator.xaml"/>
                <ResourceDictionary Source="ms-appx:///Extensions/Paths/Note.xaml"/>
                <ResourceDictionary Source="ms-appx:///Extensions/Paths/Settings.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/Wallpapers/RaspberryPi.jpg"
                    Stretch="UniformToFill"/>
    </Page.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Desktop -->
        <Frame Grid.Row="0"/>

        <!-- Taskbar -->
        <Grid Grid.Row="1"
              Background= "{ThemeResource SystemControlAcrylicElementBrush}"
              Opacity="0.8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- Start's menu button -->
            <Viewbox Grid.Column="0"
                     MaxHeight="50"
                     MaxWidth="60">
                <Button Background="Transparent"
                        Margin="0">
                    <Button.Content>
                        <Path Data="{StaticResource RaspberryGeometry}"
                              Stroke="White"
                              StrokeThickness="0.5"
                              MinHeight="32"
                              MinWidth="32"/>
                    </Button.Content>
                    <Button.Flyout>
                        <!-- Start's menu -->
                        <Flyout>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            VerticalAlignment="Bottom">
                                    <Button Height="30"
                                            Background="Transparent">
                                        <Button.Content>
                                            <Viewbox>
                                                <Path Data="{StaticResource SettingsGeometry}"
                                                      Fill="#FFFFFFFF"
                                                      RenderTransformOrigin="0.5,0.5">
                                                    <Path.RenderTransform>
                                                        <TransformGroup>
                                                            <TransformGroup.Children>
                                                                <RotateTransform Angle="0"/>
                                                                <ScaleTransform ScaleX="2" ScaleY="2"/>
                                                            </TransformGroup.Children>
                                                        </TransformGroup>
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Viewbox>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Bottom">
                                    <!-- Calculator's button -->
                                    <Button HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            MaxHeight="30"
                                            Margin="0,2,0,2"
                                            Background="Transparent">
                                        <StackPanel Orientation="Horizontal">
                                            <Viewbox MaxHeight="30" MaxWidth="30">
                                                <ContentControl Template="{StaticResource CalculatorGeometry}"/>
                                            </Viewbox>
                                            <TextBlock Margin="4,0,0,0"
                                                       Text="Calculator"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Note's button -->
                                    <Button HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            MaxHeight="30"
                                            Margin="0,2,0,2"
                                            Background="Transparent">
                                        <StackPanel Orientation="Horizontal">
                                            <Viewbox MaxHeight="26" MaxWidth="30">
                                                <ContentControl Template="{StaticResource NoteGeometry}"/>
                                            </Viewbox>
                                            <TextBlock Margin="4,0,0,0"
                                                       Text="Notes"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Viewbox>

            <!-- Task's bar applications -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"/>
            
            <!-- DateTime's info button -->
            <Viewbox Grid.Column="2"
                     MaxHeight="50"
                     MaxWidth="150">
                <Button Background="Transparent">
                    <StackPanel Orientation="Vertical"
                            Margin="3">
                        <TextBlock Text="15:00"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="12.12.2012"
                               HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Button.Flyout>
                        <Flyout>
                            <CalendarView/>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                
            </Viewbox>
            
        </Grid>
    </Grid>
</Page>
