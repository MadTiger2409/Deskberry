<Page
    x:Class="Deskberry.UWP.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:viewModels="using:Deskberry.UWP.ViewModels"
    xmlns:converters="using:Deskberry.UWP.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <converters:Base64ToImageConverter x:Key="Base64ToImageConverter"/>
            <DataTemplate x:Key="accountDataTemplate">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            Margin="0,5,0,5">
                    <controls:ImageEx
                        Width="60"
                        Height="60"
                        IsCacheEnabled="True"
                        Source="{Binding Path=Avatar.Content, Mode=OneWay,
                                Converter={StaticResource Base64ToImageConverter}}"
                        CornerRadius="999"
                        Margin="0,1,0,0"/>
                    <Viewbox>
                        <TextBlock Text="{Binding Path=Login, Mode=OneWay}"
                                   TextWrapping="NoWrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Viewbox>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>
    
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/Wallpapers/RaspberryPi.jpg"
                    Stretch="UniformToFill"/>
    </Page.Background>

    <Page.DataContext>
        <viewModels:MainPageViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <media:BackdropBlurBrush Amount="6"/>
        </Grid.Background>

        <ListView Grid.Column="0"
                  Grid.Row="2"
                  Background="Transparent"
                  ItemsSource="{Binding Accounts}"
                  SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
                  ItemTemplate="{StaticResource accountDataTemplate}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <Grid Grid.Column="1"
              Grid.Row="1"
              CornerRadius="20"
              BorderBrush="Transparent"
              BorderThickness="2"
              VerticalAlignment="Center"
              HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0"
                     MaxHeight="150">
                <controls:ImageEx
                    IsCacheEnabled="True"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="{Binding Path=SelectedAccount.Avatar.Content, Mode=OneWay, Converter={StaticResource Base64ToImageConverter}}"
                    PlaceholderSource="ms-appx:///Assets/Avatars/Wolf.jpg"
                    CornerRadius="999"/>
            </Viewbox>

            <Viewbox Grid.Row="1"
                     MaxHeight="50">
                <TextBlock Text="{Binding Path=SelectedAccount.Login, Mode=OneWay}"
                           HorizontalAlignment="Center"/>
            </Viewbox>

            <Viewbox Grid.Row="2"
                     MaxHeight="40">
                <StackPanel Orientation="Horizontal">
                    <PasswordBox Password="{Binding Path=Password, Mode=TwoWay}"
                                 PlaceholderText="Password"
                                 IsTextScaleFactorEnabled="False"
                                 MinWidth="200"/>
                    <Button Command="{Binding LoginCommand}"
                            Content="Login"
                            Background="#BFed3a0e"/>
                </StackPanel>
            </Viewbox>
        </Grid>
        
    </Grid>
</Page>
