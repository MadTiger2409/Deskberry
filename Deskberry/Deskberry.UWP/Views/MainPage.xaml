<Page
    x:Class="Deskberry.UWP.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/Wallpapers/RaspberryPi.jpg"
                    Stretch="UniformToFill"/>
    </Page.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1"
              Grid.Row="1"
              CornerRadius="20"
              BorderBrush="Black"
              BorderThickness="2">
            <Grid.Background>
                <media:BackdropBlurBrush Amount="6"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0">
                <controls:RoundImageEx
                    IsCacheEnabled="True"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="ms-appx:///Assets/Avatars/Wolf.jpg"
                    PlaceholderSource="ms-appx:///Assets/Avatars/Wolf.jpg"
                    CornerRadius="999"
                    Margin="0,1,0,0"/>
            </Viewbox>

            <Viewbox Grid.Row="1">
                <TextBlock Text="Admin"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4"/>
            </Viewbox>

            <Viewbox Grid.Row="2">
                <PasswordBox PlaceholderText="Password"
                             IsTextScaleFactorEnabled="False"
                             MinWidth="200"
                             Margin="0,0,0,4"/>
            </Viewbox>
        </Grid>

        <Viewbox Grid.Column="1"
                 Grid.Row="2">
            <Button Content="Login"
                    Margin="30"
                    Background="#BFed3a0e"/>
        </Viewbox>
    </Grid>
</Page>
